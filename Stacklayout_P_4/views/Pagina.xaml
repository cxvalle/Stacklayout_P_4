<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stacklayout_P_4.views.Pagina">
    <ContentPage.Content>
        <ScrollView>
            <Grid >
                <StackLayout  Grid.Row="0" HorizontalOptions="Center" VerticalOptions="StartAndExpand" Padding="0,50,0,0">
                    <Image Source="Earth.png">
                        
                    </Image>
                </StackLayout>
                <StackLayout  Grid.Row="1" HorizontalOptions="Center" Padding="0,50,0,0">
                    <Label Text="Hola Mundo"   Style="{StaticResource ProfileLabel}" ></Label>

                </StackLayout>

                <StackLayout  Grid.Row="2" HorizontalOptions="FillAndExpand"   Orientation="Horizontal" Padding="0,50,0,0">
                    <Button CornerRadius="10" HeightRequest="40" WidthRequest="300" Margin="55"
                        BackgroundColor="blue" TextColor="White"  Text="Boton Inicio" FontAttributes="bold" FontSize="25">

                    </Button>
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>